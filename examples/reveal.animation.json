{
  "name": "Reveal",
  "settings": {
    "position": true,
    "align": true,
    "duration": {
      "from": 0,
      "to": 5000,
      "step": 500
    }
  },
  "animate": {
    "css": {
      "{node}": {
        "transform-origin": {
          "inject": "string.template",
          "template": "${position} ${align}",
          "values": {
            "position": { "inject": "position" },
            "align": { "inject": "align" }
          }
        }
      }
    },
    "anime": {
      "inject": "Object.assign",
      "target": {
        "targets": { "inject": "node" },
        "duration": { "inject": "duration" },
        "easing": "easeOutBack"
      },
      "source": {
        "inject": "type",
        "enter": {
          "opacity": [0, 1],
          "scale": [0.9, 1]
        },
        "exit": {
          "opacity": [1, 0],
          "scale": [1, 0.9]
        }
      }
    }
  }
}
