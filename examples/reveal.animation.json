{
  "key": "reveal",
  "name": "Reveal",
  "settings": {
    "position": true,
    "duration": true,
    "easing": true,
    "direction": ["forwards", "backwards"],

    "defaults": {
      "position": "center",
      "duration": 200,
      "easing": "easeOutBack",
      "direction": "backwards"
    }
  },
  "animate": {
    "css": {
      "{node}": {
        "transform-origin": { "inject": "position" },
        "z-index": {
          "inject": "type",
          "enter": 10,
          "exit": 5
        }
      }
    },
    "anime": {
      "inject": "Object.assign",
      "target": {
        "targets": { "inject": "node" },
        "duration": { "inject": "duration" },
        "easing": { "inject": "easing" }
      },
      "source": [
        {
          "inject": "type",
          "enter": {
            "opacity": [0, 1],
            "scale": [0.9, 1]
          },
          "exit": {
            "opacity": 0,
            "scale": 0.9
          }
        },
        {
          "inject": "type",
          "enter": {
            "inject": "direction",
            "forwards": { "scale": [1.1, 1] },
            "backwards": { "scale": [0.9, 1] }
          },
          "exit": {
            "inject": "direction",
            "forwards": { "scale": 0.9 },
            "backwards": { "scale": 1.1 }
          }
        }
      ]
    }
  }
}
