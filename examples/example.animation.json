{
  "key": "example",
  "name": "Example animation",
  "settings": {
    "duration": {
      "from": 0,
      "to": 5000,
      "step": 500
    },
    "easing": true,
    "direction": true
  },
  "enter": {
    "hast": [
      {
        "type": "element",
        "tagName": "div",
        "properties": {
          "className": "el"
        }
      },
      {
        "type": "element",
        "tagName": "div",
        "properties": {
          "className": "el"
        }
      },
      {
        "type": "element",
        "tagName": "div",
        "properties": {
          "className": "el"
        }
      },
      {
        "type": "element",
        "tagName": "div",
        "properties": {
          "className": "el"
        }
      }
    ],
    "css": {
      ".el": {
        "inset": 0,
        "z-index": 20
      },
      "{node}": {
        "z-index": 20
      },
      ".el:nth-child(odd)": {
        "background": "#fff"
      },
      ".el:nth-child(even)": {
        "background": "#5662f6"
      }
    },
    "anime": [
      {
        "inject": "Object.assign",
        "target": {
          "targets": [".el", { "inject": "node" }],
          "delay": {
            "inject": "anime.stagger",
            "value": 80
          },
          "duration": { "inject": "duration" },
          "easing": { "inject": "easing" }
        },
        "source": {
          "inject": "direction",
          "up": { "translateY": ["100%", 0] },
          "down": { "translateY": ["-100%", 0] },
          "left": { "translateX": ["100%", 0] },
          "right": { "translateX": ["-100%", 0] }
        }
      }
    ]
  },
  "exit": {
    "anime": {
      "inject": "Object.assign",
      "target": {
        "targets": { "inject": "node" },
        "duration": {
          "inject": "math",
          "expression": {
            "inject": "string.template",
            "template": "${duration} + (80 * 4)",
            "values": {
              "duration": { "inject": "duration" }
            }
          }
        },
        "easing": { "inject": "easing" }
      },
      "source": {
        "inject": "direction",
        "up": { "translateY": "-30%" },
        "down": { "translateY": "30%" },
        "left": { "translateX": "-30%" },
        "right": { "translateX": "30%" }
      }
    }
  }
}
