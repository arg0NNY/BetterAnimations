{
  "name": "Example animation",
  "settings": {
    "duration": {
      "from": 0,
      "to": 5000,
      "step": 500
    },
    "easing": true,
    "variant": [
      {
        "key": "up",
        "name": "Up"
      },
      {
        "key": "down",
        "name": "Down"
      },
      {
        "key": "left",
        "name": "Left"
      },
      {
        "key": "right",
        "name": "Right"
      }
    ]
  },
  "enter": {
    "hast": [
      {
        "type": "element",
        "tagName": "div",
        "properties": {
          "className": "el"
        }
      },
      {
        "type": "element",
        "tagName": "div",
        "properties": {
          "className": "el"
        }
      },
      {
        "type": "element",
        "tagName": "div",
        "properties": {
          "className": "el"
        }
      },
      {
        "type": "element",
        "tagName": "div",
        "properties": {
          "className": "el"
        }
      }
    ],
    "css": {
      ".el": {
        "inset": 0,
        "z-index": 20
      },
      "{node}": {
        "z-index": 20
      },
      ".el:nth-child(odd)": {
        "background": "#fff"
      },
      ".el:nth-child(even)": {
        "background": "#5662f6"
      }
    },
    "anime": [
      {
        "inject": "Object.assign",
        "target": {
          "targets": [".el", { "inject": "node" }],
          "delay": {
            "inject": "anime.stagger",
            "value": 80
          },
          "duration": { "inject": "duration" },
          "easing": { "inject": "easing" }
        },
        "source": {
          "inject": "variant",
          "up": { "translateY": ["100%", 0] },
          "down": { "translateY": ["-100%", 0] },
          "left": { "translateX": ["100%", 0] },
          "right": { "translateX": ["-100%", 0] }
        }
      }
    ]
  },
  "exit": {
    "anime": {
      "inject": "wait",
      "duration": 920
    }
  }
}
