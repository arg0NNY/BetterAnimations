{
  "key": "example",
  "name": "Example animation",
  "settings": {
    "duration": {
      "from": 0,
      "to": 5000,
      "step": 500
    },
    "easing": true,
    "direction": true,

    "defaults": {
      "duration": 500,
      "easing": "easeInOutQuad",
      "direction": "rightwards"
    }
  },
  "enter": {
    "hast": [
      {
        "type": "element",
        "tagName": "div",
        "properties": {
          "className": "el"
        }
      },
      {
        "type": "element",
        "tagName": "div",
        "properties": {
          "className": "el"
        }
      },
      {
        "type": "element",
        "tagName": "div",
        "properties": {
          "className": "el"
        }
      },
      {
        "type": "element",
        "tagName": "div",
        "properties": {
          "className": "el"
        }
      }
    ],
    "css": {
      ".el": {
        "inset": 0,
        "z-index": 20
      },
      "{node}": {
        "z-index": 20
      },
      ".el:nth-child(odd)": {
        "background": "#fff"
      },
      ".el:nth-child(even)": {
        "background": "#5662f6"
      }
    },
    "anime": [
      {
        "inject": "Object.assign",
        "target": {
          "targets": [".el", { "inject": "node" }],
          "delay": {
            "inject": "anime.stagger",
            "value": 80
          },
          "duration": { "inject": "duration" },
          "easing": { "inject": "easing" }
        },
        "source": {
          "inject": "direction",
          "upwards": { "translateY": ["100%", 0] },
          "downwards": { "translateY": ["-100%", 0] },
          "leftwards": { "translateX": ["100%", 0] },
          "rightwards": { "translateX": ["-100%", 0] }
        }
      }
    ]
  },
  "exit": {
    "anime": {
      "inject": "Object.assign",
      "target": {
        "targets": { "inject": "node" },
        "duration": {
          "inject": "math",
          "expression": {
            "inject": "string.template",
            "template": "${duration} + (80 * 4)",
            "values": {
              "duration": { "inject": "duration" }
            }
          }
        },
        "easing": { "inject": "easing" }
      },
      "source": {
        "inject": "direction",
        "upwards": { "translateY": "-30%" },
        "downwards": { "translateY": "30%" },
        "leftwards": { "translateX": "-30%" },
        "rightwards": { "translateX": "30%" }
      }
    }
  }
}
